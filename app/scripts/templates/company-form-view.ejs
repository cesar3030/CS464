<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Company Form</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Name</label>  
  <div class="col-md-4">
  <input id="name" value="<%= get('company_name') %>" name="textinput" type="text" placeholder="company name" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Address</label>  
  <div class="col-md-4">
  <input id="address" value="<%= get('hq_address') %>" name="textinput" type="text" placeholder="" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Company creation date</label>  
  <div class="col-md-4">
  <input id="date" type="text" pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" value="<%= get('date_creation') %>" name="textinput" placeholder="ex: 1998-05-12" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="selectbasic">Country</label>
  <div class="col-md-4">
    <select id="county" name="selectbasic" class="form-control">
      <option value="" <% if(get('country') == "USA"){%> selected <%} %>>USA</option><% if(get('country') == "USA"){%> selected <%} %>
      <option value="" <% if(get('country') == "Canada"){%> selected <%} %>>Canada</option>
      <option value="" <% if(get('country') == "France"){%> selected <%} %>>France</option>
      <option value="" <% if(get('country') == "United kingdom"){%> selected <%} %>>United kingdom</option>
      <option value="" <% if(get('country') == "Mexico"){%> selected <%} %>>Mexico</option>
      <option value="" <% if(get('country') == "Sweden"){%> selected <%} %>>Sweden</option>
      <option value="" <% if(get('country') == "Nederlands"){%> selected <%} %>>Nederlands</option>
      <option value="" <% if(get('country') == "Brazil"){%> selected <%} %>>Brazil</option>
    </select>
  </div>
</div>

<!-- Button (Double) -->
<div class="form-group">
  <label class="col-md-4 control-label" for="button1id"></label>
  <div class="col-md-8">
    <button type="submit" name="button1id" class="btn btn-success">Save</button>
    <button type="reset" id="cancelBtn" name="button2id" class="btn btn-danger">Cancel</button>
  </div>
</div>

</fieldset>
</form>
